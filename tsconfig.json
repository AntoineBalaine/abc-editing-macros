{
  "compilerOptions": {
    "target": "es2016",
    "declaration": true,
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": [
    "src",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}
